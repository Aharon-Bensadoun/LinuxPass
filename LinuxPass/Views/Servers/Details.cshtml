@model LinuxPass.Models.Server
@{
    ViewData["Title"] = "Server Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h1 class="h3 mb-0">
                <i class="fas fa-server me-2"></i>Server Details
            </h1>
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="detail-item">
                        <label class="text-muted mb-1">
                            <i class="fas fa-server me-2"></i>
                            @Html.DisplayNameFor(model => model.HostSrvName)
                        </label>
                        <div class="form-control-plaintext fs-5">
                            @Html.DisplayFor(model => model.HostSrvName)
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="detail-item">
                        <label class="text-muted mb-1">
                            <i class="fas fa-user me-2"></i>
                            @Html.DisplayNameFor(model => model.HostSrvUsername)
                        </label>
                        <div class="form-control-plaintext fs-5">
                            @Html.DisplayFor(model => model.HostSrvUsername)
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <i class="fas fa-info-circle me-2"></i>Additional Information
                            </h5>
                            <p class="card-text text-muted">
                                This server is configured with standard security protocols and is monitored for security compliance.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-item {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.375rem;
        height: 100%;
    }

        .detail-item label {
            font-size: 0.875rem;
            font-weight: 500;
            text-transform: uppercase;
        }

    .form-control-plaintext {
        font-weight: 500;
        color: #2c3e50;
    }

    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>